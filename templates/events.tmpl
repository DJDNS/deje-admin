<!DOCTYPE html>
<html>
<head>
<title>Event Graph for {{ .Data.Channel.GetURL }}</title>
<style>
.node circle {
  fill: #fff;
  stroke-width: 1.5px;
}

.node {
  font: 10px sans-serif;
}

.node.root circle { stroke: red; }
.node.event circle { stroke: steelblue; }
.node.quorum circle { stroke: purple; }
.node.timestamp circle { stroke: orange; }

.link {
  fill: none;
  stroke: #ccc;
  stroke-width: 1.5px;
}

#details {
  white-space: pre-wrap;
}
</style>
</head>
<body>
Event graph for <strong>{{ .Data.Channel.GetURL }}</strong>
(<a href="{{ with .Data }}/events?host={{ .Channel.Host }}&port={{ .Channel.Port }}&channel={{ .Channel.Channel }}{{ end }}{{ if not .Demo }}&demo=1{{ end }}">
switch to {{ if .Demo }}real data{{ else }}demo data{{ end }}?</a>)
<script src="/js/d3.min.js"></script>
<script src="/js/jquery-2.1.0.min.js"></script>
<script>

var width = 960,
    height = 400;

var cluster = d3.layout.cluster()
    .size([height, width - 260]);

var diagonal = d3.svg.diagonal()
    .projection(function(d) { return [d.y, d.x]; });

var svg = d3.select("body").append("svg")
    .attr("width", width)
    .attr("height", height)
  .append("g")
    .attr("transform", "translate(40,0)");

function get_class(data) {
    return 'node' + (data.type ? ' ' + data.type : '');
}

function show_details(data) {
    $('#details').text(JSON.stringify(data.details, undefined, "  "));
}

d3.json("/events.json", function(error, root) {
  var nodes = cluster.nodes(root),
      links = cluster.links(nodes);

  var link = svg.selectAll(".link")
      .data(links)
    .enter().append("path")
      .attr("class", "link")
      .attr("d", diagonal);

  var node = svg.selectAll(".node")
      .data(nodes)
    .enter().append("g")
      .attr("class", get_class)
      .attr("transform", function(d) { return "translate(" + d.y + "," + d.x + ")"; })
      .on('click', show_details);

  node.append("circle")
      .attr("r", 4.5);

  node.append("text")
      .attr("dx", function(d) { return d.type == 'root' ? -8 : 8; })
      .attr("dy", 3)
      .style("text-anchor", function(d) { return d.type == 'root' ? "end" : "start"; })
      .text(function(d) { return d.label; });
});

d3.select(self.frameElement).style("height", height + "px");
</script>
<pre id="details"></pre>
</body>
</html>
